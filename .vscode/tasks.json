{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Watch Mode",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "build:watch"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "build"],
            "group": "build",
            "problemMatcher": "$tsc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
