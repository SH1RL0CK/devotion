{
    "name": "devotion",
    "version": "1.0.0",
    "description": "CLI tool connecting Notion, GitHub, and local Git projects to manage project workflows",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "devotion": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "cli",
        "notion",
        "github",
        "git",
        "workflow"
    ],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.14.0",
    "dependencies": {
        "@notionhq/client": "^4.0.2",
        "chalk": "^5.6.0",
        "commander": "^14.0.0",
        "inquirer": "^12.9.3",
        "octokit": "^5.0.3",
        "simple-git": "^3.28.0"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.9",
        "@types/node": "^24.3.0",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2"
    }
}
